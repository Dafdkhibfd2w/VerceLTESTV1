  "start_url": "/manager",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#3b82f6",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "he",
  "dir": "rtl",
  "icons": [
    {
      "src": "/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "label": "דשבורד ראשי"
    },
    {
      "src": "/screenshots/upload.png",
      "sizes": "1280x720",
      "type": "image/png",
      "label": "מסך העלאות"
    }
  ],
  "categories": ["business", "productivity", "utilities"],
  "shortcuts": [
    {
      "name": "העלאה מהירה",
      "short_name": "העלה",
      "description": "העלה קובץ חדש",
      "url": "/manager?action=upload",
      "icons": [
        {
          "src": "/icons/upload-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "חשבוניות",
      "short_name": "חשבוניות",
      "description": "צפה בחשבוניות",
      "url": "/manager#invoices",
      "icons": [
        {
          "src": "/icons/invoice-shortcut.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/api/upload",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": [
            "image/*",
            "application/pdf",
            ".doc",
            ".docx",
            ".xls",
            ".xlsx"
          ]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/manager?action=open",
      "accept": {
        "application/pdf": [".pdf"],
        "image/*": [".jpg", ".jpeg", ".png", ".webp"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+manager",
      "url": "/manager?action=%s"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "iarc_rating_id": "",
  "edge_side_panel": {
    "preferred_width": 400
  }
}
